<div class="container">
    <div class="row">
        <form action="/admin/novedades/modificar" method="post"
        enctype ="multipart/form-data">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <p><label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>

                    <label> Eliminar imagen actual</label>
                    <input type="checkbox" name="img_delete" id="img_delete" value="1">

                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">

                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
            </div>


            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Tipo</label>
                    <input type="text" class="form-control" name="tipo" value="{{novedad.tipo}}">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
        {{#if error}}
        <p>Datos ingresados err√≥neos</p>
        {{/if}}
    </div>
</div>